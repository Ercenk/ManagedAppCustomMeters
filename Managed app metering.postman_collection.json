		{
			"name": "Get AccessToken for management API",
			"event": [
				{
					"listen": "test",
					"script": {
						"id": "6dcf6325-f841-4d08-be18-7c8767429f1c",
						"exec": [
							"var data = JSON.parse(responseBody);",
							"",
							"pm.collectionVariables.set(\"accessToken\", data.access_token);",
							"",
							""
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "POST",
