		{
			"name": "Get managed app",
			"event": [
				{
					"listen": "test",
					"script": {
						"id": "a153f0d3-db42-4a48-be5e-3ea775685408",
						"exec": [
							"var data = JSON.parse(responseBody);\r",
							"\r",
							"pm.collectionVariables.set(\"resourceUsageId\", data.properties.billingDetails.resourceUsageId);\r",
							"\r",
							""
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "https://management.azure.com/subscriptions/bf7adf12-c3a8-426c-9976-29f145eba70f/resourceGroups/ercmngd/providers/Microsoft.Solutions/applications/userassigned1013?api-version=2019-07-01",
					"protocol": "https",
					"host": [
						"management",
						"azure",
						"com"
					],
					"path": [
						"subscriptions",
						"bf7adf12-c3a8-426c-9976-29f145eba70f",
						"resourceGroups",
						"ercmngd",
						"providers",
						"Microsoft.Solutions",
						"applications",
						"userassigned1013"
					],
					"query": [
						{
							"key": "api-version",
							"value": "2019-07-01"
						}
					]
				},
				"description": "Get it from the result of \r\n$MetadataUrl = \"http://169.254.169.254/metadata/identity/oauth2/token?api-version=2018-02-01&resource=https%3A%2F%2Fmanagement.azure.com%2F\"\r\n$resourceGroupInfo = curl -Headers $Headers $managementUrl | select -ExpandProperty Content | ConvertFrom-Json"
			},
			"response": []
		},
		{
			"name": "Post usage event",
			"event": [
				{
					"listen": "prerequest",
					"script": {
						"id": "262b0146-6fce-45cf-a548-01672896b05c",
						"exec": [
							"var now = new Date();\r",
							"now.setHours(now.getHours() - 2);\r",
							"\r",
							"pm.collectionVariables.set(\"utcNowMinus2Hrs\", now.toISOString());"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"auth": {
					"type": "bearer",
					"bearer": [
						{
							"key": "token",
							"value": "{{bearerTokenForMetering}}",
							"type": "string"
						}
					]
				},
				"method": "POST",
				"header": [
					{
						"key": "authorization",
						"value": "{{bearerToken}}",
						"type": "text"
					},
					{
						"key": "Content-Type",
						"name": "Content-Type",
						"value": "application/json",
						"type": "text"
					},
					{
						"key": "x-ms-requestid",
						"value": "{{$guid}}",
						"type": "text"
					},
					{
						"key": "x-ms-correlationid",
						"value": "{{$guid}}",
						"type": "text"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\r\n  \"resourceId\": \"{{resourceUsageId}}\",\r\n  \"quantity\": 15,\r\n  \"dimension\": \"dim1\",\r\n  \"effectiveStartTime\": \"{{utcNowMinus2Hrs}}\",\r\n  \"planId\": \"userassigned\"\r\n}",
					"options": {
						"raw": {
							"language": "json"
						}
					}
				},
				"url": {
					"raw": "https://marketplaceapi.microsoft.com/api/usageEvent?api-version=2018-08-31",
					"protocol": "https",
					"host": [
						"marketplaceapi",
						"microsoft",
						"com"
					],
					"path": [
						"api",
						"usageEvent"
					],
					"query": [
						{
							"key": "api-version",
							"value": "2018-08-31"
						}
					]
				}
			},
			"response": []
		},
